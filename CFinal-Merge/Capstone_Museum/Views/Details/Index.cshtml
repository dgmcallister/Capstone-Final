        .mySlides {
            display: none;
        }

        /* Set height of body and the document to 100% */
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial;
        }

        /* Style tab links */
        .tablink {
            background-color: #555;
            color: white;
            float: left;
            border: none;
            outline: none;
            cursor: pointer;
            padding: 14px 16px;
            font-size: 17px;
            width: 25%;
        }

            .tablink:hover {
                background-color: #777;
            }

        /* Style the tab content (and add height:100% for full page content) */
        .tabcontent {
            color: black;
            display: none;
            padding: 100px 20px;
            height: 100%;
        }

        #Information {
            background-color: #eeeeee;
        }

        #Citations {
            background-color: #eeeeee;
        }

        #Parts {
            background-color: #eeeeee;
        }

        #Projects {
            background-color: #eeeeee;
        }

        table {
            border: 1px solid black;
        }



        div.c {
            text-align: right;
            padding-right: 0px;
            float: right;
            display: inline-block;
        }

